<%= simple_form_for @job, html: { multipart: true } do |f| %>
  <%= f.error_notification %>
  <div class="column is-warning is-narrow" style="width: 650px;">
    
    <div class="columns">
      <div class="field column">
        <div class="control">
          <%= f.input :job_author, required: false, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, label: "Company Name" %>
        </div>
      </div>

      <div class="field column">
        <div class="control">
          <%= f.input :url, required: false, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, label: "Company Website", placeholder: "http://company.com" %>
        </div>
      </div>
    </div>

    <div class="columns ">
      <div class="field column is-6">
        <div class="control">
        <%= f.input :title, required: false, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, placeholder: "Frontend Developer" %>
        </div>
      </div>

      <div class="field column is-6">
        <div class="control">
          <label class="label">Apply url or E-mail</label>
          <%= f.input :apply_url,label: false, required: true, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }  %>
        </div>
      </div>
    </div>

    <div class="columns">
      <div class="field column is-4">
        <div class="control">
          <label class="label">Job Type</label>
          <div class="control has-icons-left">
            <span class="select">
              <%= f.input_field :job_type, required: true, collection: Job::JOB_TYPES, prompt: "Select a job type" %>
            </span>
            <span class="icon is-small is-left">
              <i class="fa fa-briefcase"></i>
            </span>
          </div>
        </div>
         <div class="control mt2">
          <label class="label">Art Type</label>
          <div class="control has-icons-left">
            <span class="select">
              <%= f.input_field :art_type, required: true, collection: Job::ART_TYPES, prompt: "Select a art type" %>
            </span>
            <span class="icon is-small is-left">
              <i class="fa fa-briefcase"></i>
            </span>
          </div>
        </div>
      </div>

      <div class="column">

        <div class="field">
          <div class="control">
            <%= f.input :location, require: false, input_html: { class: "input" }, wrapper: false, label_html: { class: "label" }, hint: 'Examples: "San Francisco, CA", "Seattle", "Anywhere"' %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label for="job[remote_ok]">
              <%= f.input :remote_ok, required: false, input_html: { class: "checkbox"}, wrapper: false, label: false %>
              Work can be done remotely
            </label><i class="fa fa-wifi"></i>
          </div>
        </div>
      </div>
    </div>

      <div class="field">
        <div class="control">
          <%= f.input :description, required: false, input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label" } %>
        </div>
      </div>
    
    <%= render 'payment' %>

    <%= f.button :submit, class: "button is-prime is-small mt3" %>
<% end %>

<%= link_to 'BACK', jobs_path, class:"text optional label mt3" %>
  </div> 