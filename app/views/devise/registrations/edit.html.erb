<section class="">
    <div class="columns is-centered">
        <div class="column hero is-primaryV">
        </div>
        <div class="column hero is-purple">
          <%# <div class="field">
            <div>
              <a href="#avatar" class="title is-size-4 has-text-justified has-text-white">Profile Picture</a>
            </div>
            <div>
              <a href="#public-profile" class="title is-size-4 has-text-justified has-text-white">Public Profile</a>
            </div>
            <div>
              <a href="#email" class="title is-size-4 has-text-justified has-text-white">Email</a>
            </div>
            <div>
              <a href="#password" class="title is-size-4 has-text-justified has-text-white">Password</a>
            </div>
          </div> %>
        </div>

      <div class="column is-4 hero is-warning profile">
      <h1 class="title is-size-4">EDIT PROFILE</h1>
      <p class="subtitle is-size-6">PUBLIC PROFILE</p>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

      <%# avatar profile %>
        <div class="field" id="avatar" >
          <div class="control">
              <%= image_tag(resource.avatar) if resource.avatar.attached? %>
          </div>
         </div>
        <div class="field">
          <div class="control">
            <%= f.file_field :avatar, as: :file, input_html: { class: "file"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
         <hr />
      <%# public profile %>
      <div id="public-profile">
        <div class="field">
          <div class="control">
            <%= f.input :username, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
          <div class="field">
            <div class="control">
              <%= f.input :name, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
      

        <div class="field">
          <div class="control">
            <%= f.input :location, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :bio, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%=  f.input :art, label: "Artist Area", required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <label class="label">Looking for a job?</label>
            <%= f.check_box :available %>
            <%= f.label :available, "I am avaiable for a job.", autofocus: true, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
      </div>
       <hr />
        <%# email %>
        <div id="email">
          <div class="field">
            <div class="control">
              <%= f.input :email, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
        </div>
         <hr />
        <%# password %>
        
        <div id="password">
          <div class="field">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          </div>

          <div class="field">
            <div class="control">
            <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
            <%= f.input :password_confirmation, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
        </div>
         <hr />
        <%# password confirmation %>
          <div class="field">
            <div class="control">
              <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
        </div>
   
        <%= f.button :submit, "Update", class:"button is-primary" %>
     
      <% end %>

        <hr />
        <h3 class="title is-size-6">Cancel my account</h3>
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
   
      </div>
        <div class="column hero is-warning">
        </div>
        <div class="column hero is-warning">
        </div>
    </div>
  </div>
</section>