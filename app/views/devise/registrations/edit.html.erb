<section class="">
    <div class="columns is-centered is-desktop">
        <div class="column hero is-primary-edit is-hidden-mobile">
        </div>
        <div class="column hero is-purple is-hidden-mobile">
          <div class="field" style="margin-top: 150px;">
            <div>
              <a onclick="myFunctionAvatar()" class="title is-size-4 has-text-justified has-text-white">Profile Picture</a>
            </div>
            <div>
              <a onclick="myFunctionProfile()" class="title is-size-4 has-text-justified has-text-white">Public Profile</a>
            </div>
            <div>
              <a onclick="myFunctionEmail()" class="title is-size-4 has-text-justified has-text-white">Email</a>
            </div>
            <div>
              <a onclick="myFunctionPassword()" class="title is-size-4 has-text-justified has-text-white">Password</a>
            </div>
          </div>
        </div>

      <div class="column is-4 hero is-warning profile">
      <h1 class="title is-size-4">EDIT PROFILE</h1>
      <%# <p class="subtitle is-size-6">PUBLIC PROFILE</p> %>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= f.error_notification %>

      <%# avatar profile %>
      <div id="avatar">
      <p class="subtitle is-size-6">PUBLIC PICTURE</p>
        <div class="field">
          <div class="control">
              <%= cl_image_tag(resource.avatar.key) if resource.avatar.attached? %>
          </div>
         </div>
        <div class="field">
          <div class="control">
            <%= f.file_field :avatar, as: :file, input_html: { class: "file"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
        <hr />
      </div>
      <%# public profile %>
      <div id="public-profile">
        <p class="subtitle is-size-6">PUBLIC PROFILE</p>
        <div class="field">
          <div class="control">
            <%= f.input :username, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
          <div class="field">
            <div class="control">
              <%= f.input :name, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
      

        <div class="field">
          <div class="control">
            <%= f.input :location, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%= f.input :bio, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>

        <div class="field">
          <div class="control">
            <%=  f.input :art, label: "Artist Area", required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
        <% if @user.entity %>
        <% else %>
        <div class="field">
          <div class="control">
            <label class="label">Looking for a job?</label>
            <%= f.check_box :available %>
            <%= f.label :available, "I am avaiable for a job.", autofocus: true, wrapper: false, label_html: { class: "label" } %>
          </div>
        </div>
        <% end %>
        <hr />
      </div>

        <%# email %>
        <div id="email">
        <p class="subtitle is-size-6">EMAIL</p>
          <div class="field">
            <div class="control">
              <%= f.input :email, required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
         <hr />
         </div>
        <%# password %>
        
        <div id="password">
          <p class="subtitle is-size-6">PASSWORD</p>
          <div class="field">
          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
          <% end %>
          </div>

          <div class="field">
            <div class="control">
            <%= f.input :password, autocomplete: "off", hint: "leave it blank if you don't want to change it", required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
            <%= f.input :password_confirmation, required: false, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>
          <hr />
        </div>
        <%# password confirmation %>
          <div class="field">
            <div class="control">
              <%= f.input :current_password, hint: "we need your current password to confirm your changes", required: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
        </div>
   
        <%= f.button :submit, "Update", class:"button is-primary" %>
     
      <% end %>

        <hr />
        <h3 class="title is-size-6">Cancel my account</h3>
        <p>Unhappy? <%= link_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>
   
      </div>
        <div class="column hero is-warning is-hidden-mobile">
        </div>
        <div class="column hero is-warning is-hidden-mobile">
        </div>
    </div>
  </div>
</section>

<script>
function myFunctionAvatar() {
  var x = document.getElementById("avatar");
  if (x.style.display === "none") {
    x.style.display = "block";
  } else {
    x.style.display = "none";
  }
}

function myFunctionProfile() {
  var y = document.getElementById("public-profile");
  if (y.style.display === "") {
    y.style.display = "block";
  } else {
    y.style.display = "";
  }
}

function myFunctionEmail() {
  var z = document.getElementById("email");
  if (z.style.display === "") {
    z.style.display = "block";
  } else {
    z.style.display = "";
  }
}

function myFunctionPassword() {
  var p = document.getElementById("password");
  if (p.style.display === "") {
    p.style.display = "block";
  } else {
    p.style.display = "";
  }
}
</script>