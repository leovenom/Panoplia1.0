<section>
	<div class="columns is-centered is-desktop">
	
		<div class=" is-desktop background-pink">
			<%# <p class="title has-text-centered">THE PLATFORM <span>FOR THE ARTISTIC <span>COMMUNITY</p> %>
			<%# <p class="subtitle has-text-centered">This is a space for artists to promote their work<span> and be found by entities looking for the most<span> creative minds available in the market.</p> %>
			<%= image_tag("@inesvaldezphotography.jpg")%>
				<div id="slideoutG">
					<a href="https://www.instagram.com/inesvaldezphotography/" target="_blank" ><p>@inesvaldezphotography</p></a>
				</div>
		</div>

		<div class="column is-6-desktop sign-up">
			<div class="column is-8 is-offset-2">
				<h2 class="title">Resend confirmation instructions</h2>
				<%= simple_form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
					<%= f.error_notification %>
          <%= f.full_error :confirmation_token %>
					<div class="field">
						<div class="control">
						<%= f.input :email, required: true, autofocus: true, input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
						</div>
					</div>
					
					<%= f.button :submit, "Resend confirmation instructions", class:"button is-primary" %>
					<% end %>
					<br />
					<%#= render "devise/shared/links" %>
					<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
						<%= link_to "Forgot your password?", new_password_path(resource_name)%><br />
					<% end -%>
					<%= link_to 'BACK', user_session_path, class:"text optional label mt2" %>
  		</div>
		</div>

	</div>
</section>