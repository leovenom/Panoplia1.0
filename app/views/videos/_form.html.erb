<%= simple_form_for @video, html: { multipart: true }  do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :description %>
  </div>

  <div class="field">
    <%= f.file_field :video, id: :video_clip %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
  