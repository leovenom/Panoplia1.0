<%= simple_form_for @video do |f| %>
  <%= f.error_notification %>
  <div class="columns" style="height: 660px;">
    <div class="column hero is-background is-hidden-touch">
    </div>
    <div class="column hero is-purple is-hidden-mobile">
    </div>
      <div class="column hero is-warning profile">
        <div class="column is-warning is-narrow" style="width: 390px;">
          
          <div class="field">
            <div class="control">
              <%= f.input :title, label: "Title", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
            <div class="control">
              <%= f.input :description, label: "Description", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
            </div>
          </div>

          <div class="field">
          <label for="video-url" class="text optional label">URL</label>
            <div class="control">
              <%= f.text_field :url, id:"video-url", name:"video[url]", class:"string optional input"%>            
            </div>
          </div>

          <div class="form-actions">
            <%= f.button :submit, class:"button is-prime is-small" %>
          </div>
        </div>
        <div style="display: flex;">
          <%= link_to 'Show', @video, class:"text optional label"  %> | 
          <%= link_to 'Back', videos_path, class:"text optional label" %>
        </div> 
      </div> 
      <br/>
      <br/>
      <br/>
      <br/>
      </div> 
<% end %>

