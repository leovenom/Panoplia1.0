<%= simple_form_for @video do |f| %>
	<%= f.error_notification %>
	<div class="columns is-centered is-desktop" style="height: 100vh;">

		<div class="background-pink">
			<%= link_to ' BACK', root_path, class:"text optional label ml5 mt5" %>

			<p class="title has-text-centered">THE PLATFORM <span>FOR THE ARTISTIC <span>COMMUNITY</p>
			 <%= image_tag ("background-log.jpg")%>
		 </div>

		 <div class="column is-6 hero is-warning profile">
			<div class="column is-warning is-narrow" style="">
				<p class="subtitle cards">UPLOAD A VIDEO</p>
				<div class="field">
					<div class="control">
						<label for="video-url" class="label">URL <span class="tooltips fa fa-question-circle" tooltip="Only Youtube or Vimeo allowed." tooltip-position="url"></span></label>
						<%= f.text_field :url, required: true, id:"video-url", name:"video[url]", class:"string optional input", label: false%>            
					</div>
				</div>

				<div class="field">
					<div class="control">
						<%= f.input :title, required: true, label: "Title", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
					</div>
				</div>

				<div class="field">
					<div class="control">
					  <label class="label">Description <span class="tooltips fa fa-question-circle" tooltip="If you had any collaborations while doing this artwork, please announce them here." tooltip-position="right"></span></label>
						<%= f.input :description, required: true, label: "Description", input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label" }, label: false %>
					</div>
				</div>

				<div class="form-actions">
					<%= f.button :submit, class:"button is-prime is-small" %>
				</div>
				<div style="display: flex;">
					<%#= link_to 'SHOW ', @video, class:"text optional label mt3"  %>
				</div> 
			</div>
		</div>
		
	</div> 
<% end %>

  <script>
  $('.tooltips').append("<span></span>");
$('.tooltips:not([tooltip-position])').attr('tooltip-position','bottom');


$(".tooltips").mouseenter(function(){
 $(this).find('span').empty().append($(this).attr('tooltip'));
});
  </script>