<div class="section">
	<div class="container">
		<div class="columns">
			<div class="column is-12">
				<div class="shot-container">
					<div class="shot-full">
						 <%= cl_image_tag (@shot.user_shot_url) unless @shot.user_shot.blank? %>
					</div>
					<% if user_signed_in? && (current_user.id == @shot.user_id) %>		
						<div class="buttons has-addons level-right">
							<%= link_to 'Edit', edit_shot_path(@shot), class: "button" %>
							<%= link_to 'Delete', shot_path, class: "button", method: :delete, data: { confirm: 'Are you sure you want to delete this shot?'} %>
						</div>
					<% end %>
		<div class="columns">
			<div class="column is-7">
						<div class="user-thumb shot-show">
						<%= cl_image_tag @shot.user.avatar.key unless @shot.user.avatar.blank?%>
						</div>

						<div class="user-name has-text-weight-bold">
							<h3 class="shot-title"><%= @shot.title %></h3>
							<span class="by has-text-grey-light">by </span><%=link_to @shot.user.name, @shot.user %>
						</div>

						<div class="content">
							<%= @shot.description %>
						</div>

					<section class="comments">
						<h3 class="subtitle is-5"><%= pluralize(@shot.comments.count, 'Comment') %></h3>
							<%= render @shot.comments %>
						<% if user_signed_in? %>
							<div class="comment-form">
								<h4 class="subtitle is-3">Leave a reply</h4>
								<%= render 'comments/form' %>
							</div>
						<% else %>
							<div class="content"><%= link_to 'Sign in', new_user_session_path %> to leave a comment.</div>
						<% end %>
					</section>
			</div>
			<div class="column is-4 is-offset-1">
							<div class="buttons is-centered-shot-show">
              <% if user_signed_in? && !current_user?(@shot.user)%>
              <% if current_user.following?(@shot.user) %>
              <%= button_to "UNFOLLOW", friendships_path(user_id: @shot.user.id), class:"button is-outlined is-dark", method: :delete%>
              <%else%>
              <%= button_to "+FOLLOW", friendships_path(user_id: @shot.user.id), class:"button is-outlined is-roxo"%>
              <%end%>
              <%end%>
							  	<div class="level-item likes">
                    <% if user_signed_in? %>
                    
                    <% if current_user.liked? @shot %>
                    <%= link_to unlike_shot_path(@shot), method: :put, class: "unlike_shot" do %>
                    <span class="button is-outlined is-roxo icon"><i class="fa fa-heart has-text-primary"></i></span>
                    <span class="vote_count"><%#= @shot.get_likes.size %></span>
                    <% end %>
                    <% else %>
                    <%= link_to like_shot_path(@shot), method: :put, class: "like_shot" do %>
                    <span class="button is-outlined is-roxo icon"><i class="fa fa-heart"></i></span>
                    <span class="vote_count"><%#= @shot.get_likes.size %></span>
                    <% end %>
                    <% end %>
										<% end %>
                  </div>

            </div>
				      <nav class="level shot-analytics">
                  <div class="level-item views data">
                    <%= link_to @shot do %>
                    <span class="icon"><i class="fa fa-eye"></i></span>
                    <%= @shot.impressionist_count %>
                    <% end %>
                  </div>
                  <div class="level-item comments data">
                    <%= link_to @shot do %>
                    <span class="icon"><i class="fa fa-comment"></i></span>
                    <%= @shot.comments.count %>
                    <% end %>
                  </div>
                  <div class="level-item likes">
                    <% if user_signed_in? %>
                    
                    <% if current_user.liked? @shot %>
                    <%= link_to unlike_shot_path(@shot), method: :put, class: "unlike_shot" do %>
                    <span class="icon"><i class="fa fa-heart has-text-primary"></i></span>
                    <span class="vote_count"><%= @shot.get_likes.size %></span>
                    <% end %>
                    <% else %>
                    <%= link_to like_shot_path(@shot), method: :put, class: "like_shot" do %>
                    <span class="icon"><i class="fa fa-heart"></i></span>
                    <span class="vote_count"><%= @shot.get_likes.size %></span>
                    <% end %>
                    <% end %>
                    <% else %>
                    <%= link_to like_shot_path(@shot), method: :put, class: "like_shot" do %>
                    <span class="icon"><i class="fa fa-heart"></i></span>
                    <span class="vote_count"><%= @shot.get_likes.size %></span>
                    <% end %>
                    <% end %>
                  </div>
              </nav>

				<h2 class="title is-3">Inspiration</h2>
				<div class="shot-wrapper">
				<%= link_to @random_shot, class: "shot" do %>
					<%= cl_image_tag @random_shot.user_shot_url %>
						<div class="shot-data">
								<div class="user-thumb avatar">
									<%= cl_image_tag @random_shot.user.avatar.key, class:'avatar' unless @random_shot.user.avatar.blank?  %>
									<h3 class="shot-user"><%= @random_shot.user.name %></h3>
									<h3 class="shot-title"><%= @random_shot.title %></h3>
								</div>
						</div>
				</div>
				<% end%>


			</div>
		</div>
				</div>
			</div>
		</div>
	</div>
</div>
