<%= simple_form_for @shot, html: { multipart: true }  do |f| %>
  <%= f.error_notification %>
        <div class="columns is-centered">

          <div class="column hero is-primaryV is-hidden-mobile">
          </div>
          <div class="column hero is-purple is-hidden-mobile">

          </div>

            <div class="column hero is-4 is-warning profile">
              <p class="title is-size-3 has-text-centered">What are you working on?</p>
            <% unless @shot.user_shot.blank? %>
            <%= cl_image_tag @shot.user_shot.key, id: "previewImage" %>
            <% end %>

            <output id="list"></output>
            <div id="drop_zone">Drag your shot here</div>
            <br />

            <%= f.input :user_shot, label: false, wrapper: false, label_html: { class: "file-label" } %>

            <div class="field">
              <div class="control">
                <%= f.input :title, label: "Title", input_html: { class: "input"}, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.input :description, input_html: { class: "textarea"}, wrapper: false, label_html: { class: "label" } %>
              </div>
            </div>

            <div class="field">
              <div class="control">
                <%= f.button :submit, class:"button is-primary" %>
              </div>
            </div>
          <br/>
				  <br/>
          <br/>
          <br/>
        </div> 
                  
          <div class="column hero is-warning is-hidden-mobile">
          </div>
          <div class="column hero is-warning is-hidden-mobile">
          </div>
<% end %>
